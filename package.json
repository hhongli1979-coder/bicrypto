  "scripts": {
    "dev": "concurrently \"pnpm --filter frontend dev\" \"pnpm --filter backend dev\"",
    "dev:backend": "pnpm --filter backend dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "build:all": "cross-env NODE_ENV=production pnpm --filter frontend build && pnpm --filter backend build",
    "build:backend": "pnpm --filter backend build",
    "build:frontend": "cross-env NODE_ENV=production pnpm --filter frontend build",
    "build:permission": "node tools/build-permission.js",
    "start": "pm2 start production.config.js --env production",
    "start:thread": "pm2 start production.thread.config.js --env production",
    "start:frontend": "pnpm --filter frontend start",
    "start:backend": "pnpm --filter backend start",
    "stop": "pm2 stop all 2>/dev/null || echo 'No PM2 processes to stop'",
    "updator": "pnpm stop && pnpm update-packages-quick && pnpm build:backend && pnpm start:backend && node -e \"console.log('⏳ Waiting 30 seconds before seeding...'); setTimeout(() => { console.log('✅ Wait complete, proceeding with seed...'); process.exit(0); }, 30000)\" && pnpm stop && pnpm seed && pnpm build:all && pnpm start",
    "update-packages": "node tools/update-packages.js",
    "update-packages-quick": "pnpm --filter backend update && pnpm --filter frontend update && pnpm update",
    "seed": "pnpm --filter backend seed",
    "test": "pnpm --filter backend test",
    "test:watch": "pnpm --filter backend test:watch",
    "test:coverage": "pnpm --filter backend test:coverage",
    "test:integration": "pnpm --filter backend test:integration",
    "test:unit": "pnpm --filter backend test:unit",
    "extract:permission": "node tools/extract-permission.js",
    "i18n": "cd tools/translation-manager && npm start",
    "i18n:install": "cd tools/translation-manager && npm install",
    "btc-node:setup": "node scripts/btc-node-setup.mjs",
    "update-cache-version": "node docs/update-cache-version.js",
    "format": "prettier --write \"frontend/**/*.{ts,tsx,md,mdx,css,scss}\" --ignore-path .prettierignore",
    "lint": "eslint frontend --fix --ext .ts,.tsx"
  },
